<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FoodNow.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:FoodNow.View"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home" Icon="home_icon.png">
            <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate view:HomePage}" />
        </Tab>
        <Tab Title="Shop" Icon="shop_icon.png">
            <ShellContent
            Title="Shop"
            ContentTemplate="{DataTemplate view:ShopPage}" />
        </Tab>
        <Tab Title="Settings" Icon="settings_icon.png">
            <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate view:SettingsPage}" />
        </Tab>
        <Tab Title="info" Icon="info_icon.png">
            <ShellContent
            Title="Info"
            ContentTemplate="{DataTemplate view:InfoPage}" />
        </Tab>
    </TabBar>

</Shell>
