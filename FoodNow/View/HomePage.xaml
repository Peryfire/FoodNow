<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodNow.View.HomePage"
             Title="{Binding Title}">

    <StackLayout Margin="50">
        <CollectionView ItemsSource="{Binding SweetsList}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout BackgroundColor="Pink" Orientation="Horizontal" HeightRequest="50">
                        <Label Text="{Binding Nome}"/>
                        <Label Text="{Binding Descrizione}"/>
                        <Label Text="{Binding Prezzo}"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>